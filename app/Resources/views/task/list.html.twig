{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
    <div class="row">
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h4 class="pull-right">
                        {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}<span class="glyphicon glyphicon-remove"></span>{% endif %}
                    </h4>
                    {% if task.user is not null and app.user.username == task.user.username or is_granted('ROLE_ADMIN') %}
                        <h4><a href="{{ path('task_edit', {'id' : task.id }) ~ '?search=' ~ app.request.query.get('search') }}">{{ task.title }}</a></h4>
                    {% else %}
                        <h4>{{ task.title }}</h4>
                    {% endif %}
                    <p>{{ task.content }}</p>
                </div>
                <div>
                    {% if task.user is not null and app.user.username == task.user.username or is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('task_toggle', {'id':task.id}) ~ '?search=' ~ app.request.query.get('search')}}"
                           class="btn btn-success btn-sm pull-right"
                        >
                            {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                        </a>
                        <a href="{{ path('task_delete', {'id':task.id}) ~ '?search=' ~ app.request.query.get('search')}}"
                           class="btn btn-danger btn-sm pull-right"
                        >
                            Supprimer
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
