{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ task.title }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    {{ form_start(
        form,
        {
            'action' : path('task_edit', { 'id' : task.id }) ~ '?search=' ~ app.request.query.get('search'),
            'attr': {'novalidate': 'novalidate'}
        }
    ) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-success pull-right">Modifier</button>
    {{ form_end(form) }}
{% endblock %}
