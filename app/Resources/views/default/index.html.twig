{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Bienvenue sur Todo List</h1>
    <p>L'application vous permettant de gérer l'ensemble de vos tâches sans effort !</p>
{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-md-12 hidden-sm hidden-xs">
            <a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
            <a href="{{ path('task_list') ~ '?search=waiting' }}" class="btn btn-info">Consulter la liste des tâches à faire</a>
            <a href="{{ path('task_list') ~ '?search=done' }}" class="btn btn-default">Consulter la liste des tâches terminées</a>
        </div>

        <div class="col-sm-12 visible-sm visible-xs">
            <div class="btn-group-vertical">
                <a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
                <a href="{{ path('task_list') ~ '?search=waiting' }}" class="btn btn-info">Consulter la liste des tâches à faire</a>
                <a href="{{ path('task_list') ~ '?search=done' }}" class="btn btn-default">Consulter la liste des tâches terminées</a>
            </div>
        </div>

    </div>
{% endblock %}
